<Window x:Class="TestClothesForHands.Windows.AddEditMateralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClothesForHands.Windows"
        mc:Ignorable="d"
        Title="AddEditMateralWindow" 
        Height="800" Width="500"
        Icon="/TestClothesForHands;component/Resourses/icon.ico"
        WindowStartupLocation="CenterScreen"
        MinHeight="800"
        MinWidth="500"
        MaxWidth="500">
    
    <Grid>
        <ScrollViewer>
            <StackPanel>

                <!-- Заголовок -->

                <WrapPanel>
                    <Image Grid.RowSpan="2"
               Source="/TestClothesForHands;component/Resourses/Logo.png"
               HorizontalAlignment="Left"
               Margin="20 0"
                   Width="80"/>
                    <TextBlock Text="Добавление материала"
                           VerticalAlignment="Center"
                           FontSize="25"
                           FontWeight="Bold"
                           FontFamily="Candara"/>
                </WrapPanel>

                <Image x:Name="imgMaterial"
                   Width="100"
                   Height="120"/>
                <Button x:Name="btnChooseImg"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontFamily="Candara"
                    Content="Выбрать Изображение"
                    Click="btnChooseImg_Click"/>


                <TextBlock Text="Наименование"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtName"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>

                <TextBlock Text="Тип материала"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <ComboBox x:Name="cmbTypeMAterial"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>


                <TextBlock Text="Количество на складе"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtCount"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>

                <TextBlock Text="Единица измерения"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <ComboBox x:Name="cmbUnitMaterial"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>


                <TextBlock Text="Количество в упаковке"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtCountInBox"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>


                <TextBlock Text="Минимальное количество"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtMinCount"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>

                <TextBlock Text="Cтоимость за единицу"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtPrice"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>

                <TextBlock Text="Подробное описание"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Candara"
                       Margin="0 20 0 0"/>

                <TextBox x:Name="txtDiscr"
                     HorizontalAlignment="Center"
                     FontSize="20"
                     FontFamily="Candara"
                     Width="150"/>


                <Button x:Name="btnSave"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontFamily="Candara"
                        Content="Добавить"
                        Margin="0 20 0 0"
                        Click="btnSave_Click"/>

                <Button x:Name="btnClose"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontFamily="Candara"
                        Content="Отмена"
                        Margin="0 20 0 0"
                        Click="btnClose_Click"/>

            </StackPanel>
        </ScrollViewer>
      
        
            
           
    </Grid>
</Window>
